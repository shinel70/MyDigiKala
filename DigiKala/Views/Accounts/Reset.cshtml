@using DigiKala.Core.ViewModels
@model UserRegisterViewModel
@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<h4 class="text-center">فراموشی رمز</h4>
<hr />
<form asp-action="Reset">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-9 col-sm-12">
                <input asp-for="Mobile" class="form-control input-lg" id="mobile" placeholder="شماره موبایل" />
                <span asp-validation-for="Mobile" class="text-danger validation-error"></span>
            </div>
            <div class="col-md-3 col-sm-12">
                <button class="btn btn-info btn-block" onclick="SendSmsCode()">ارسال کد</button>
            </div>
        </div>
    </div>
    <div class="form-group">
        <input asp-for="ActiveCode" class="form-control input-lg" placeholder="کد فعال موبایل" />
        <span asp-validation-for="ActiveCode" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control input-lg" placeholder="کلمه عبور" />
        <span asp-validation-for="Password" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input asp-for="ConfirmPassword" class="form-control input-lg" placeholder="تأیید کلمه عبور" />
        <span asp-validation-for="ConfirmPassword" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="تغییر کلمه عبور" class="btn-lg btn-block btn-submit" />
    </div>
    <div class="form-group">
        <h4 class="text-center">
            <a href="/Accounts/Register">کاربر جدید هستم</a>
        </h4>
    </div>
    <div class="form-group">
        <h4 class="text-center">
            <a href="/Accounts/Login">ورود به حساب</a>
        </h4>
    </div>
</form>
