@model DigiKala.Core.ViewModels.ForgetViewModel

@{
    ViewData["Title"] = "فراموشی رمز عبور";
    Layout = "~/Views/Shared/_Account.cshtml";
}

<h4 class="text-center">فراموشی رمز در دیجی کالا</h4>
<hr />
<form asp-action="Forget">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <input asp-for="Mobile" class="form-control input-lg" placeholder="شماره موبایل" />
        <span asp-validation-for="Mobile" class="text-danger validation-error"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="ارسال کد تأیید" class="btn-lg btn-block btn-submit" />
    </div>
    <div class="form-group">
        <h4 class="text-center">
            <a href="/Accounts/Login">ورود به حساب کاربری</a>
        </h4>
    </div>
</form>
