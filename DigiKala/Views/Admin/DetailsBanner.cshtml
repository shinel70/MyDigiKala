@model DigiKala.DataAccessLayer.Entities.Banner

@{
    Layout = null;
}

<h4 class="text-center">جزئیات جایگاه</h4>
<hr />
<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-offset-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">

        <table class="table table-hover">

            <tr class="text-center">

                <p class="text-center">نام جایگاه : @Model.Name</p>

            </tr>

            <tr class="text-center">

                <p class="text-center">قیمت اجاره : @Model.Price.ToString("n0") ریال</p>

            </tr>

            <tr class="text-center">

                <p class="text-center">تعداد روز : @Model.Day</p>

            </tr>


            <tr class="text-center">

                <img src="~/images/ads/@Model.DefaultImg" alt="تصویر پیدا نشد" width="200" height="120" class="img-responsive" style="margin: auto" />

            </tr>

            <tr class="text-center">

                <p class="text-center">سایر توضیحات : @Model.Desc</p>

            </tr>

        </table>

    </div>
</div>

