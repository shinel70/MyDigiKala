@model DigiKala.Core.ViewModels.CategoryViewModel

@{
    Layout = null;
}

<h4 class="text-center">ثبت سردسته جدید</h4>
<hr />
<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-offset-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
        <form asp-action="AddCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="نام دسته" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Icon" class="form-control" placeholder="نام آیکون" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت شود" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>