@model DigiKala.Core.ViewModels.AdminSettingViewModel

@{
    ViewData["Title"] = "تنظیمات سایت";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

        <h1 class="text-center">تنظیمات سایت</h1>

        <div class="row">
            <form asp-action="Setting">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (ViewBag.MyMessage)
                {
                    <div class="form-group">
                        <div class="alert alert-success text-center">
                            <h4 class="text-center">
                                تغییرات با موفقیت اعمال شد
                            </h4>
                        </div>
                    </div>
                }

                <div class="form-group">
                    <input asp-for="SiteName" class="form-control" placeholder="نام سایت" />
                    <span asp-validation-for="SiteName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="SiteDesc" class="form-control" placeholder="توضیحات سایت"></textarea>
                    <span asp-validation-for="SiteDesc" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <textarea asp-for="SiteKeys" class="form-control" placeholder="کلمات کلیدی سایت"></textarea>
                    <span asp-validation-for="SiteKeys" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SmsApi" class="form-control" placeholder="SMS API" />
                    <span asp-validation-for="SmsApi" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="SmsSender" class="form-control" placeholder="فرستنده پیامک" />
                    <span asp-validation-for="SmsSender" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="MailAddress" class="form-control" placeholder="فرستنده ایمیل" />
                    <span asp-validation-for="MailAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="MailPassword" class="form-control" placeholder="کلمه عبور ایمیل" />
                    <span asp-validation-for="MailPassword" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="ذخیره تغییرات" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>


    </div>


