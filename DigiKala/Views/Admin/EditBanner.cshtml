@model DigiKala.Core.ViewModels.AdminBannerViewModel

@{
    Layout = null;
}

<h4 class="text-center">اصلاح جایگاه @Model.Name</h4>
<hr />
<div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-8 col-md-offset-2 col-sm-offset-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
        <form asp-action="EditBanner" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Name" class="form-control" placeholder="نام جایگاه" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Size" class="form-control" placeholder="سایز جایگاه" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Day" class="form-control" placeholder="تعداد روز" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Price" class="form-control" placeholder="قیمت" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Desc" class="form-control" placeholder="سایر توضیحات" />
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Img" class="control-label"></label>
                <input asp-for="Img" class="form-control" />
                <span asp-validation-for="Img" class="text-danger"></span>
                <br />
                <img src="~/images/ads/@Model.ImgName" alt="تصویر پیدا نشد" width="200" height="120" class="img-responsive" style="margin: auto" />
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره تغییرات" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>

