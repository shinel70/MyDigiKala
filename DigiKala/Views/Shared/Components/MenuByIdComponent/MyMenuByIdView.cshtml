@model IEnumerable<DigiKala.DataAccessLayer.Entities.Category>

@foreach (var item in Model)
{
    <div class="col-md-2">
        <h4 class="row btn btn-block mega-title">
            <a class="nav nav-link" href="/home/SearchByCategory/@item.Name">@item.Name</a>
        </h4>

        @(await Component.InvokeAsync("SubMenuComponent", item.Id))
    </div>
}
