@model DigiKala.Core.ViewModels.StoreBankViewModel

@{
    ViewData["Title"] = "مشخصات حساب مالی";
    Layout = "~/Views/Shared/_Panel.cshtml";
}

<h4 class="text-center">مشخصات مالی</h4>
<hr />
<div class="row" style="padding-top: 25px; padding-bottom: 25px">
    <div class="col-lg-offset-3 col-lg-8 col-md-offset-3 col-md-8 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
        <form asp-action="BankCard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            @if (ViewBag.IsSuccess == true)
            {
                <div class="form-group">
                    <div class="alert alert-success">
                        <h4 class="text-center">
                            تغییرات حساب مالی با موفقیت انجام شد
                        </h4>
                    </div>
                </div>
            }

            <div class="form-group">
                <input asp-for="BankCard" class="form-control" placeholder="شماره شبا بدون IR" />
                <span asp-validation-for="BankCard" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="اعمال تغییرات" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>
</div>
