@model DigiKala.Core.ViewModels.StoreActivateViewModel

@{
    ViewData["Title"] = "فعالسازی";
    Layout = "~/Views/Shared/_Panel.cshtml";
}


<div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

    <h1 class="text-center">فعالسازی حساب فروشگاه</h1>

    <h4 class="text-center">کد های ارسال شده به موبایل و ایمیل را وارد کنید</h4>
    <hr />

    <div class="row">
        <form asp-action="Activate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (ViewBag.IsOK)
            {
                <div class="form-group">
                    <div class="alert alert-success text-center">
                        <h4 class="text-center">
                            فعالسازی حساب فروشگاهی شما با موفقیت انجام شد
                        </h4>
                    </div>
                </div>
            }

            <div class="form-group">
                <input asp-for="MobileCode" class="form-control" placeholder="کد موبایل" />
                <span asp-validation-for="MobileCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="MailCode" class="form-control" placeholder="کد ایمیل" />
                <span asp-validation-for="MailCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="فعالسازی" class="btn btn-success btn-block" />
            </div>
        </form>
    </div>


</div>
